@using CCSB.Utility 

<!DOCTYPE html>
<html lang="en">
<!--#region Head-->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ccsb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/css/site.css" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/qtip2/3.0.3/jquery.qtip.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.8.0/main.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2020.2.513/styles/kendo.default-v2.min.css" />
    <link href="~/lib/select2/css/select2.css" rel="stylesheet" />
</head>
<!--#endregion-->
<body>
    <!--#region Header-->
    <header>
        
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a asp-controller="Home" asp-action="Index">
                <img class="menu-logo" src="~/lib/Images/Logo.png" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto" id="burgerMenu">
                    @{
                        if (User.Identity.Name != null)
                        {
                            <li class="nav-item">
                                <a class="text-hover-size" asp-area="" asp-controller="Appointment" asp-action="Index">Agenda</a>
                            </li>
                        }
                    }
                    <li class="nav-item" id="contactButton">
                        <a class="text-hover-size" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item" id="vehicleButton">
                        <a id="mijn-voertuigen" asp-area="" asp-controller="Account" asp-action="Login">Mijn Voertuig</a>
                    </li>
                </ul>
            </div>
            <div class="logout-button">
                <a class="" href="@Url.Action("LogOff","Account")">
                    @if (User.IsInRole(Helper.Admin))
                    {
                        <p>Admin @User.Identity.Name</p>
                    }
                    @if (User.IsInRole(Helper.User))
                    {
                        <p>User @User.Identity.Name</p>
                    }
                </a>
            </div>
        </nav>
    </header>

        @RenderBody()

        <!--#region Footer-->
        <div class="container-fluid">
            <div class="hrFooter">
                <hr />
            </div>
        </div>
        <footer class="footerclass">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-md-3 item">
                        <h3>Services</h3>
                        <ul>
                            <li><a href="#">Web design</a></li>
                            <li><a href="#">Development</a></li>
                            <li><a href="#">Hosting</a></li>
                        </ul>
                    </div>
                    <div class="col-sm-6 col-md-3 item">
                        <h3>About</h3>
                        <ul>
                            <li><a href="#">Company</a></li>
                            <li><a href="#">Team</a></li>
                            <li><a href="#">Careers</a></li>
                        </ul>
                    </div>
                    <div class="col-md-6 item text">
                        <h3>CCSB</h3>
                        <p>Bij ons kunt u uw camper of caravan veilig stallen. U kunt uw voertuig ophalen of brengen wanneer het u uit komt.</p>
                    </div>
                    <div class="col item social"><a href="#"><i class="icon ion-social-facebook"></i></a><a href="#"><i class="icon ion-social-twitter"></i></a><a href="#"><i class="icon ion-social-snapchat"></i></a><a href="#"><i class="icon ion-social-instagram"></i></a></div>
                </div>
                <p class="copyright">CCSB © 2021</p>
            </div>
        </footer>
        <!--#endregion-->
        <!-- #region Scripts -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        <script type="text/javascript" src="~/lib/select2/js/select2.full.min.js"></script>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/qtip2/3.0.3/jquery.qtip.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.8.0/main.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.8.0/locales/nl.js"></script>
        <script src="https://kendo.cdn.telerik.com/2020.2.513/js/kendo.all.min.js"></script>
        <script type="text/javascript" src="~/js/notify.min.js"></script>

        @await RenderSectionAsync("Scripts", required: false)
        <!-- #endregion -->
</body>
</html>
