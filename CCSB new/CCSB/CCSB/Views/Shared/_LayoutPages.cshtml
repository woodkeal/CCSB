@using CCSB.Utility

<!DOCTYPE html>
<html lang="en">
<!--#region Head-->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ccsb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/select2/css/select2.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/qtip2/3.0.3/jquery.qtip.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.8.0/main.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2020.2.513/styles/kendo.default-v2.min.css" />
</head>
<!--#endregion-->
<body>
    <!--#region Header-->
    <header>

        <nav class="container nav-bar navbar navbar-expand-lg navbar-light">

            <a class="menu-logo-link navbar-brand" asp-controller="Home" asp-action="Index">
                <img class="menu-logo" src="~/lib/Images/Logo.png" />
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a class="nav-button" asp-area="" asp-controller="Appointment" asp-action="Index">
                            <div class="horizontal-center">Agenda</div>
                        </a>
                    </li>
                    <li class="nav-item" id="">
                        <a class="nav-button" asp-area="" asp-controller="Home" asp-action="Contact">
                            <div class="horizontal-center">Contact</div>
                        </a>
                    </li>
                    <li class="nav-item" id="">
                        <a class="nav-button horizontal-center" asp-area="" asp-controller="Vehicles" asp-action="Index">
                            <div class="horizontal-center">Voertuigen</div>
                        </a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-button" href="@Url.Action("LogOff","Account")">
                                <div class="horizontal-center">
                                    Uitloggen
                                </div>
                            </a>
                        </li>
                    }

                </ul>

            </div>

        </nav>

    </header>

    <div class="container">
        @RenderBody()
    </div>

    <!--#region Footer-->
    <div class="container-fluid">
        <div class="hrFooter">
            <hr />
        </div>
    </div>
    <footer class="footerclass">
        <div class="container">
            <div class="row">
                <div class="col item social"><a href="#"><i class="icon ion-social-facebook"></i></a><a href="#"><i class="icon ion-social-twitter"></i></a><a href="#"><i class="icon ion-social-snapchat"></i></a><a href="#"><i class="icon ion-social-instagram"></i></a></div>
            </div>
            <p class="copyright">CCSB © 2021</p>
        </div>
    </footer>
    <!--#endregion-->
    <!-- #region Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/select2/js/select2.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/qtip2/3.0.3/jquery.qtip.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.8.0/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.8.0/locales/nl.js"></script>
    <script src="https://kendo.cdn.telerik.com/2020.2.513/js/kendo.all.min.js"></script>
    <script type="text/javascript" src="~/js/notify.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <!-- #endregion -->
</body>
</html>
