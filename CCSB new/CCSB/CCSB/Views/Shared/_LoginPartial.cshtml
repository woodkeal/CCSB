@inject Microsoft.AspNetCore.Identity.SignInManager<CCSB.Models.ApplicationUser> signInManager

@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="Logoff" asp-controller="Account">
        <ul class="nav navbar-nav">
            <li class="text-white nav-link">welkom @User.Identity.Name</li>
            <li class="text-white">
                <a class="text-white nav-link" href="javascrip:document.getElementById('logoutForm').submit()">uitloggen</a>
            </li>
        </ul>
    </form>
}

else
{ 
<ul class="nav navbar-nav">
    <li>
        @*@Html.ActionLink("Registreer", "Reigster", "Account", routeValues: null,
       htmlAttributes: new { id = "registerLink" })*@
        <a id="registerLink" class="nav-link text-white" asp-action="Register" asp-controller="Account">Registreren</a>
    </li>
    <li>
        @*@Html.ActionLink("Login", "Login", "Account", routeValues: null,
        htmlAttributes: new { id = "loginLink" })*@
        <a id="loginLink" class="nav-link text-white" asp-action="Login" asp-controller="Account">Login</a>
    </li>
</ul>
}